FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Fix for npm optional dependencies bug in Alpine Linux
# Remove node_modules and package-lock.json, then reinstall
RUN rm -rf node_modules package-lock.json && npm cache clean --force && npm install

# Fix permissions for node_modules to allow Vite to write temp files
RUN chmod -R 777 node_modules

# Copy source code
COPY . .

# Expose port 3000
EXPOSE 3000

# Default command
CMD ["npm", "run", "dev"]
